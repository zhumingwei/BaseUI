<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CircleBondImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
        <attr name="civ_icon_color" format="color" />
        <!--新增图片文字属性-->
        <attr name="civ_img_text" format="string"/>
        <attr name="civ_img_text_size" format="dimension"/>
    </declare-styleable>


    <declare-styleable name="BaseToolBar">
        <attr name="base_title" format="string|reference"></attr>
    </declare-styleable>

    <declare-styleable name="CustomTabLayout">
        <attr name="tabTextAppearance" format="reference"></attr>
        <attr name="tabSelectedTextColor" format="color|reference"></attr>
        <attr name="tabDisableTextColor" format="color|reference"></attr>
        <attr name="tabTextColor" format="color|reference"></attr>
        <attr name="mtabBackground" format="color|reference"></attr>
        <attr name="tabIndicatorColor" format="color|reference"></attr>
        <attr name="tabIndicatorHeight" format="dimension"></attr>
        <attr name="tabIndicatorWidth" format="dimension"></attr>
        <attr name="tabDefaultWidth" format="dimension"></attr>
        <attr name="mtabMode" >
            <enum name="scrollable" value="0"/>
            <enum name="fixed" value="1"/>
        </attr>
    </declare-styleable>
</resources>