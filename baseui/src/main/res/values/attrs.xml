<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CircleBondImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
        <attr name="civ_icon_color" format="color" />
        <!--新增图片文字属性-->
        <attr name="civ_img_text" format="string"/>
        <attr name="civ_img_text_size" format="dimension"/>
    </declare-styleable>


    <declare-styleable name="BaseToolBar">
        <attr name="base_title" format="string|reference"></attr>
    </declare-styleable>

    <declare-styleable name="DisableTabLayout">
        <attr name="disable_tabTextAppearance" format="reference"></attr>
        <attr name="disable_tabSelectedTextColor" format="color|reference"></attr>
        <attr name="disable_tabDisableTextColor" format="color|reference"></attr>
        <attr name="disable_tabTextColor" format="color|reference"></attr>
        <attr name="disable_tabBackground" format="color|reference"></attr>
        <attr name="disable_tabIndicatorColor" format="color|reference"></attr>
        <attr name="disable_tabIndicatorHeight" format="dimension"></attr>
        <attr name="disable_tabIndicatorWidth" format="dimension"></attr>
        <attr name="disable_tabDefaultWidth" format="dimension"></attr>
        <attr name="disable_tabMode" >
            <enum name="scrollable" value="0"/>
            <enum name="fixed" value="1"/>
        </attr>
    </declare-styleable>
</resources>